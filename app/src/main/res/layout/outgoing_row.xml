<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <View
                android:id="@+id/expense_bankAccount_flag_background"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/semi_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/expense_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="28/03/2005"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/bankAccount_balance_sign"
                app:layout_constraintTop_toTopOf="@+id/expense_bankAccount_title_expense" />

            <TextView
                android:id="@+id/expense_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="1234.56"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/bankAccount_balance_sign"
                app:layout_constraintTop_toTopOf="@+id/bankAccount_balance_sign" />

            <TextView
                android:id="@+id/bankAccount_balance_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/expense_bankAccount_flag_background"
                app:layout_constraintHorizontal_bias="0.595"
                app:layout_constraintStart_toEndOf="@+id/expense_title_txt"
                app:layout_constraintTop_toTopOf="@+id/expense_title_txt"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/expense_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="Conta de Luz"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/expense_bankAccount_flag"
                app:layout_constraintTop_toTopOf="@+id/expense_bankAccount_flag" />

            <TextView
                android:id="@+id/expense_bankAccount_title_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Conta do Banco"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/expense_title_txt"
                app:layout_constraintTop_toBottomOf="@+id/expense_title_txt" />

            <View
                android:id="@+id/expense_bankAccount_flag"
                android:layout_width="28dp"
                android:layout_height="61dp"
                android:layout_marginStart="1dp"
                android:background="@android:color/holo_blue_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>